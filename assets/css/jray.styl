.jray
  position fixed
  color black
  font-family sans-serif
  top 0
  right 0
  bottom 0

  *
    margin 0
    padding 0

  ul
    list-style none

  pre
    background #2a2a2a
    white-space pre-wrap

  header
    margin 10px
    h2
      font-weight normal
      font-size inherit

  .handle
    position absolute
    z-index -10
    line-height 1
    .inner
      position absolute
      right 0
      top 5px
      background #f4f2f0
      padding 10px 8px 7px 10px
      border-radius 5px 0 0 5px
      border-style solid
      border-color #e4e2e0
      border-width 2px
      cursor pointer

  .panel
    background #f4f2f0
    border-left 2px solid #e4e2e0
    z-index 1
    position absolute
    height 100%
    width 400px

    left -10px
    transition 0.2s ease-in-out left
    &.expanded
      left -400px

  // .panel, .handle .inner
  //   box-shadow 0 0 20px rgba(0,0,0,0.2)

  .inspector
    background white
    padding 5px
    margin 10px

  a
    cursor pointer
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

  .thumbnails

    .script-name
      margin-bottom 5px
      font-size 12px

    pre
      font-size 3px

    .inspector
      margin 10px 0 0 10px
      cursor pointer
      vertical-align top
      width 50px
      display inline-block

      &.current
        border-color white
